<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AgregarUsuario</servlet-name>
        <servlet-class>Controller.AgregarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarProducto</servlet-name>
        <servlet-class>Controller.AgregarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaEmpresaServlet</servlet-name>
        <servlet-class>Controller.ListaEmpresaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarEmpresa</servlet-name>
        <servlet-class>Controller.AgregarEmpresa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetalleUsuario</servlet-name>
        <servlet-class>Controller.DetalleUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarMultimedia</servlet-name>
        <servlet-class>Controller.AgregarMultimedia</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgregarUsuario</servlet-name>
        <url-pattern>/AgregarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarProducto</servlet-name>
        <url-pattern>/AgregarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaEmpresaServlet</servlet-name>
        <url-pattern>/ListaEmpresaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarEmpresa</servlet-name>
        <url-pattern>/AgregarEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetalleUsuario</servlet-name>
        <url-pattern>/DetalleUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarMultimedia</servlet-name>
        <url-pattern>/AgregarMultimedia</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
